{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "curly": 2,
    "quotes": [2, "single"],
    "no-unreachable": 2,
    "eqeqeq": 2,
    "default-case": 2,
    "no-console": 0,
    "strict": [2, "global"],
    "semi": [2, "always"]
  }
}